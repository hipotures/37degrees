# 37degrees Environment Variables
# Copy this file to .env and fill in your values

# Project settings
DEBUG=false
VERBOSE=false
LOG_LEVEL=INFO

# Image generation
DEFAULT_GENERATOR=invokeai
ENABLE_GPU=true
GPU_DEVICE=0

# Video settings
VIDEO_RESOLUTION=1080x1920
VIDEO_FPS=30
SLIDE_DURATION=3.5
TRANSITION_DURATION=0.5
VIDEO_CODEC=libx264
VIDEO_PRESET=medium
VIDEO_CRF=23

# Audio settings
AUDIO_VOLUME=0.7
AUDIO_FADE_IN=1.0
AUDIO_FADE_OUT=2.0
AUDIO_NORMALIZE=true

# Text overlay
TEXT_METHOD=outline
TEXT_OUTLINE_WIDTH=3
TEXT_OUTLINE_COLOR=#000000
TEXT_SHADOW_OFFSET=5
TEXT_SHADOW_COLOR=#000000
ENABLE_COLOR_EMOJIS=true

# Paths
BOOKS_DIR=books
COLLECTIONS_DIR=collections
OUTPUT_DIR=output
TEMP_DIR=/tmp/37degrees
SHARED_ASSETS=shared_assets
CACHE_DIR=~/.cache/37degrees

# API Keys (for future features)
# PERPLEXITY_API_KEY=your_perplexity_api_key_here
# PERPLEXITY_MODEL=sonar-medium-online
# GOOGLE_API_KEY=your_google_api_key_here
# GOOGLE_CX=your_google_custom_search_engine_id
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_MODEL=gpt-4

# Site generation (future feature)
# SITE_OUTPUT_DIR=output/site
# SITE_BASE_URL=https://37stopni.pl
# ENABLE_ANALYTICS=false
# ANALYTICS_ID=

# Development
PARALLEL=true
MAX_WORKERS=4
DRY_RUN=false

# API limits
API_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=2.0
EXPONENTIAL_BACKOFF=true

# Cache settings
CACHE_ENABLED=true
CACHE_MAX_SIZE=1073741824
CACHE_TTL=3600

# Feature flags
ENABLE_WEB_GENERATORS=false
ENABLE_RESEARCH_API=false
ENABLE_STATIC_SITE=false
ENABLE_BATCH_OPS=true
ENABLE_PROGRESS=true
ENABLE_COLOR=true

# Testing
TESTING=false
#!/usr/bin/env python3
import json
import sys
import os

# Read input from stdin
data = json.load(sys.stdin)

# Check environment variables
env_vars = {
    'CLAUDE_PROJECT_DIR': os.environ.get('CLAUDE_PROJECT_DIR'),
    'PWD': os.environ.get('PWD'),
    'CLAUDECODE': os.environ.get('CLAUDECODE'),
    'CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR': os.environ.get('CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR')
}

# Write to debug file
with open('/tmp/claude-env-vars.json', 'w') as f:
    json.dump({
        'tool_name': data.get('tool_name'),
        'env_vars': env_vars
    }, f, indent=2)

# Pass through unchanged
print(json.dumps({}))